<html>
	<head>
		<title><%= title %></title>
		<link rel="stylesheet" href="/css/home.css" />
	</head>
	<body>
		<h1>Contacts list</h1>
		<div>
			<form action="/create-contact" method="POST">
				<input type="text" placeholder="Name" name="name" required /><br />
				<input type="tel" placeholder="Phone No." name="phone" required /><br />
				<button type="submit">Add Contact</button>
			</form>
		</div>
		<div>
			<ul>
				<li id="list-header">
					<p>Name</p>
					<p>Phone</p>
					<a></a>
				</li>
				<% for(let i of contact_list){ %>
				<li>
					<p><%= i.name %></p>
					<p>
						<a href="tel:<%= i.phone %>" class="phone-number"><%= i.phone %></a>
					</p>
					<a href="/delete-contact/?id=<%= i._id %>" class="delete">Del🗑️</a>
				</li>
				<% } %>
			</ul>
		</div>
		<script
			type="text/javascript
        "
			src="/js/home.js"
		></script>
	</body>
</html>
